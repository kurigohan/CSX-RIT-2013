    public Cell( int x, int y ) {
        this.x = x;
        this.y = y;
    }

    public Cell( int x, int y, char c) {
        this.x = x;
        this.y = y;
        display = c;
    }
    public void setDisplay( char c ) {
        display = c;
    }

    public void hitCell(){
        hit = true;
    }

    public void resetCell() {
        display = '-';
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }

    public String toString() {
        return Character.toString(display); 
